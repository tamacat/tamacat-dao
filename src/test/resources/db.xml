<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd"> 
<beans> 
  <bean id="default" class="org.tamacat.sql.DriverManagerJdbcConfig" singleton="true"> 
    <property name="driverClass">
      <!-- <value>com.mysql.jdbc.Driver</value> -->
      <value>org.tamacat.mock.sql.MockDriver</value>
    </property>
    <property name="url">
      <!-- <value><![CDATA[
      	jdbc:mysql://localhost:3306/test?useCompression=true&useUnicode=true&characterEncoding=utf8&dumpQueriesOnException=true
      ]]></value> -->
      <value>jdbc:mock://localhost/test</value>
    </property>
    <property name="user">
      <value>test</value>
    </property>
    <property name="password">
      <value>test</value>
    </property>
    <property name="maxPools">
      <value> 10</value>
    </property>
    <property name="minPools">
      <value> 0</value>
    </property>
    <property name="activateSQL">
      <value>SELECT 1</value>
    </property>
  </bean>
  
  <bean id="javadb" class="org.tamacat.sql.DriverManagerJdbcConfig" singleton="true"> 
    <property name="driverClass">
      <value>org.apache.derby.jdbc.ClientDriver</value>
    </property>
    <property name="url">
      <value><![CDATA[
        jdbc:derby:db/sample;create=true
      ]]></value>
    </property>
    <property name="user">
      <value>test</value>
    </property>
    <property name="password">
      <value>test</value>
    </property>
    <property name="maxPools">
      <value> 10</value>
    </property>
    <property name="minPools">
      <value> 0</value>
    </property>
  </bean>
  
  <bean id="ds" class="org.tamacat.sql.DataSourceJdbcConfig" singleton="true"> 
    <property name="dataSourceName">
      <value>java:comp/env/jdbc/test</value>
    </property>
  </bean>
</beans>